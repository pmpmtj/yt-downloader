# Django Configuration for Multi-User YouTube Downloader

# Security
SECRET_KEY=your-secret-key-here

# Database Configuration
DB_NAME=db_my_web_app
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Multi-User Access Configuration
# For development with public access, use '*' (not recommended for production)
# For production, specify your domain: ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=*

# yt-dlp cookie file (optional, Netscape cookies.txt format)
# If set, the downloader will use this cookie file to satisfy YouTube bot checks
# Example (Windows): C:\\Users\\you\\cookies.txt
# Example (Linux/Mac): /home/you/cookies.txt
YT_DLP_COOKIE_FILE=

# CSRF Configuration (optional - only needed if you have a specific domain)
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Production Settings (set these in production)
# DEBUG=False
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True